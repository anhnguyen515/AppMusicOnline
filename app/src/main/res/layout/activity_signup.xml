<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_ground_get_start">

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi There!"
        android:textColor="#1B1B1B"


        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/hithere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create your               account"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hithere"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/useLogo"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:src="@drawable/logo_nit"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt3" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useLogo" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt_login"
        app:layout_constraintBottom_toBottomOf="@+id/firstname"
        app:layout_constraintLeft_toRightOf="@id/firstname"
        app:layout_constraintTop_toTopOf="@+id/firstname" />

    <TextView
        android:id="@+id/firstnamebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="First name"
        android:textColor="#1B1B1B"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@+id/firstname"
        app:layout_constraintTop_toBottomOf="@+id/firstname" />

    <TextView
        android:id="@+id/lastnamebox"
        android:layout_width="129dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:text="Last name"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/lastname"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/email"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt_login"
        app:layout_constraintStart_toStartOf="@+id/firstnamebox"
        app:layout_constraintTop_toBottomOf="@+id/firstnamebox" />

    <TextView
        android:id="@+id/emailbox"
        android:layout_width="164dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text="Email"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt_login"
        app:layout_constraintStart_toStartOf="@+id/emailbox"
        app:layout_constraintTop_toBottomOf="@+id/emailbox" />

    <TextView
        android:id="@+id/passwordbox"
        android:layout_width="197dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:text="Password"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/againpassword"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:background="@drawable/custom_edt_login"
        app:layout_constraintStart_toStartOf="@+id/passwordbox"
        app:layout_constraintTop_toBottomOf="@+id/passwordbox" />

    <TextView
        android:id="@+id/rewrite"
        android:layout_width="288dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="Re-enter password"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/againpassword"
        app:layout_constraintTop_toBottomOf="@+id/againpassword" />

    <ImageView
        android:id="@+id/btnFinish"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/selector"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/btnFinish"
        app:layout_constraintStart_toStartOf="@+id/rewrite"
        app:layout_constraintTop_toTopOf="@+id/btnFinish" />


</androidx.constraintlayout.widget.ConstraintLayout>



